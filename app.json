{
  "id": "com.lightwaverf.smartseries",
  "version": "1.1.3",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Lightwave Smart Series"
  },
  "description": {
    "en": "Adds support for LightwaveRF Smart Series Devices"
  },
  "category": [
    "lights"
  ],
  "tags": {
    "en": [
      "Lightwave",
      "Dimmer",
      "Socket",
      "Relay",
      "Power",
      "Thermostat"
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "homey@rockall.plus.com"
  },
  "drivers": [
    {
      "id": "lwdimmer",
      "name": {
        "en": "Dimmer"
      },
      "class": "light",
      "capabilities": [
        "measure_power",
        "meter_power",
        "dim",
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwdimmer/assets/images/large.png",
        "small": "/drivers/lwdimmer/assets/images/small.png"
      }
    },
    {
      "id": "lwsockets",
      "name": {
        "en": "Socket"
      },
      "class": "socket",
      "capabilities": [
        "measure_power",
        "meter_power",
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwsockets/assets/images/large.png",
        "small": "/drivers/lwsockets/assets/images/small.png"
      }
    },
    {
      "id": "lwrelay",
      "name": {
        "en": "Relay"
      },
      "class": "socket",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwrelay/assets/images/large.png",
        "small": "/drivers/lwrelay/assets/images/small.png"
      }
    },
    {
      "id": "lwcontact",
      "name": {
        "en": "Contact Sensor"
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "alarm_contact"
      ],
      "energy": {
        "batteries": [ "AA", "AA" ] 
      },   
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwcontact/assets/images/large.png",
        "small": "/drivers/lwcontact/assets/images/small.png"
      }
    },
    {
      "id": "lwenergy",
      "name": {
        "en": "Energy Monitor"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_power"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwenergy/assets/images/large.png",
        "small": "/drivers/lwenergy/assets/images/small.png"
      }
    },
    {
      "id": "lwthermostat",
      "name": {
        "en": "Heating"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "max": 40
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/lwthermostat/assets/images/large.png",
        "small": "/drivers/lwthermostat/assets/images/small.png"
      }
    }
  ]
}